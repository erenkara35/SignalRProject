@model CreateMailDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönderme Paneli</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="receiveMail">Alıcı Mail Adresi</label>
                                <input type="text" class="form-control" asp-for="ReceiveMail" id="receiveMail" placeholder="Alıcı mail adresini giriniz">
                            </div>
                            <div class="form-group">
                                <label for="subject">Konu</label>
                                <input type="text" class="form-control" asp-for="Subject" id="subject" placeholder="Başlık giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="body">Mesajınız</label>
                                <textarea rows="5" type="email" class="form-control" asp-for="Body" id="body" placeholder="Email içeriğini giriniz."></textarea>
                            </div>                           
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Maili Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
