@model UpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="FeatureId" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Öne Çıkan Alan Güncelleme İşlemleri</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title1">1. Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title1" id="title1" placeholder="1. Başlığı giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="title2">2. Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title2" id="title2" placeholder="2. Başlığı giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="title3">3. Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title3" id="title3" placeholder="3. Başlığı giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="description1">1. Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description1" id="description1" placeholder="1. açıklamayı giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="description2">2. Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description2" id="description2" placeholder="2. açıklamayı giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="description3">3. Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description3" id="description3" placeholder="3. açıklamayı giriniz.">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
