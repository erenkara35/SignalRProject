@model CreateBookingDto

@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Rezervasyon Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="bookingName">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" id="bookingName" placeholder="Ad Soyad giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone" placeholder="Telefon numarası giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="mail">Mail Adresi</label>
                                <input type="email" class="form-control" asp-for="Mail" id="mail" placeholder="Mail giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="personCount">Kişi Sayısı</label>
                                <input type="number" class="form-control" asp-for="PersonCount" id="personCount" placeholder="Kişi sayısı giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="date">Rezervasyon Tarihi</label>
                                <input type="date" class="form-control" asp-for="PersonCount" id="date" placeholder="Kişi sayısı giriniz.">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Rezervasyon Oluştur</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
