@model CreateSocialMediaDto

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Medya İşlemleri</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Platform Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title" placeholder="Platform adını giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="icon">İkon Giriniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="icon" placeholder="İkon giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="url">URL Giriniz</label>
                                <input type="text" class="form-control" asp-for="Url" id="url" placeholder="Url adresini giriniz.">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
