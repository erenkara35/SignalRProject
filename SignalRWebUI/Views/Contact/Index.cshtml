@model List<ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int sayac = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Alt İletişim Bilgileri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim bilgileri alanıyla ilgili işlemler yapılabilir.<strong>Tema bütünlüğü için 1 tane hakkımızda alanı oluşturmayı unutmayın.</strong>
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açık Günler</th>
									<th scope="col">Açık Günl Açıklaması</th>
									<th scope="col">Açık Saatler</th>


									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									sayac++;
									<tr>
										<td>@sayac</td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.FooterDescription</td>
										<td>@item.FooterTitle</td>
										<td>@item.OpenDays</td>
										<td>@item.OpenDaysDescription</td>
										<td>@item.OpenHours</td>

										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-outline-primary">Yeni İletişim Bilgisi Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>