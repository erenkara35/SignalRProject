@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="TestimonialId" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Müşteri Yorumu Güncelleme İşlemleri</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Müşteri Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name" placeholder="Müşteri adını giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="title">Müşteri Ünvanını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title" placeholder="Müşteri ünvanını giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Müşteri Resim Dosyası Yolunu Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl" placeholder="Müşteri görsel yolunu giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="comment">Müşteri Yorumunu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Comment" id="comment" placeholder="Müşteri yorumunu giriniz.">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
